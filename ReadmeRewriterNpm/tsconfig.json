{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "bin",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noEmitOnError": true,
    "declaration": true,
    "newLine": "lf",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
